<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- INFO only: simple format -->
        <Console name="InfoConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%m"/>
        </Console>

        <!-- DEBUG and ERROR: full format -->
        <Console name="VerboseConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %c{1.} - %m%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Logger for INFO -->
        <Logger name="InfoLogger" level="info" additivity="false">
            <AppenderRef ref="InfoConsole"/>
        </Logger>

        <!-- Root logger: DEBUG and more -->
        <Root level="debug">
            <AppenderRef ref="VerboseConsole"/>
        </Root>
    </Loggers>
</Configuration>
